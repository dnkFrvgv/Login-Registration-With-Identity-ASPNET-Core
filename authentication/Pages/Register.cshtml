@page
@model authentication.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<section class="h-100 h-custom" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
        
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registrar</h3>

            <form method="post" class="px-md-2">
                <div asp-validation-summary="All"></div>
                <div class="form-outline mb-4">
                    <input type="email" asp-for="Model.Email" id="formEmail" class="form-control" />
                    <label class="form-label" for="formEmail">Email</label>
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                    <input type="text" asp-for="Model.Name" id="formName" class="form-control" />
                    <label class="form-label" for="formName">Username</label>
                    <span asp-validation-for="Model.Name" class="text-danger"></span>

                </div>


              <div class="form-outline mb-4">
                <input type="password" asp-for="Model.Password" id="formPassword" class="form-control" />
                <label class="form-label" for="formPassword">Senha</label>
                <span asp-validation-for="Model.Password" class="text-danger"></span>

              </div>

              <div class="form-outline mb-4">
                <input type="password" asp-for="Model.ConfirmPassword" id="formConfirmPassword" class="form-control" />
                <label class="form-label" for="formConfirmPassword">Confirmar senha</label>
                <span asp-validation-for="Model.ConfirmPassword" class="text-danger"></span>

              </div>

              <button type="submit" class="btn btn-success btn-lg mb-1">Enviar</button>

            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>